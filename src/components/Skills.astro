---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

const skills = await getCollection("skills");
const sortedSkills = skills.sort((a, b) => a.data.order - b.data.order);

const techIcons: Record<string, string> = {
  // Frontend
  TypeScript:
    "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/typescript/typescript-original.svg",
  React:
    "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/react/react-original.svg",
  "Vue.js":
    "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/vuejs/vuejs-original.svg",
  "Next.js":
    "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/nextjs/nextjs-original.svg",
  Astro:
    "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/astro/astro-original.svg",
  Tailwind:
    "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/tailwindcss/tailwindcss-original.svg",
  Svelte:
    "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/svelte/svelte-original.svg",
  SCSS: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/sass/sass-original.svg",
  Playwright:
    "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/playwright/playwright-original.svg",
  TanStack: "https://tanstack.com/images/logos/logo-color-600.png",
  // Backend
  "Node.js":
    "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/nodejs/nodejs-original.svg",
  Express:
    "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/express/express-original.svg",
  NestJS:
    "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/nestjs/nestjs-original.svg",
  PostgreSQL:
    "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/postgresql/postgresql-original.svg",
  MongoDB:
    "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/mongodb/mongodb-original.svg",
  GraphQL:
    "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/graphql/graphql-plain.svg",
  AdonisJS:
    "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/adonisjs/adonisjs-original.svg",
  Strapi:
    "https://cdn.jsdelivr.net/gh/homarr-labs/dashboard-icons/svg/strapi.svg",
  Elysia: "https://elysiajs.com/assets/elysia.svg",
  // Tools
  Git: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/git/git-original.svg",
  Docker:
    "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/docker/docker-original.svg",
  "CI/CD":
    "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/githubactions/githubactions-original.svg",
  AWS: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/amazonwebservices/amazonwebservices-original-wordmark.svg",
  Testing:
    "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/jest/jest-plain.svg",
  Agile:
    "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/jira/jira-original.svg",
  Linux:
    "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/linux/linux-original.svg",
  GCP: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/googlecloud/googlecloud-original.svg",
  n8n: "https://avatars.githubusercontent.com/u/45487711?s=200&v=4",
  Coolify:
    "https://cdn.jsdelivr.net/gh/homarr-labs/dashboard-icons/svg/coolify.svg",
};
---

<section class="skills" id="skills">
  <div class="container">
    <h2 class="section-title">Comp√©tences</h2>

    <div class="skills-grid">
      {
        sortedSkills.map((skillGroup) => (
          <div class="skill-category">
            <h3 class="category-title">{skillGroup.data.category}</h3>
            <div class="skill-list">
              {skillGroup.data.items.map((skill, index) => (
                <div class="skill-item" style={`--delay: ${index * 0.1}s`}>
                  <div class="skill-icon">
                    <Image
                      src={techIcons[skill.name]}
                      alt={skill.name}
                      inferSize={true}
                      loading="lazy"
                    />
                  </div>
                  <span class="skill-name">{skill.name}</span>
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .skills {
    background: var(--color-bg);
    position: relative;
    padding-bottom: 4rem;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: 2rem;
  }

  .skill-category {
    background: rgba(10, 10, 15, 0.6);
    border-radius: 2px; /* Sharper corners */
    padding: 2rem;
    border: 1px solid rgba(45, 226, 230, 0.1);
    transition: all 0.2s ease; /* Snappier transition */
    position: relative;
    overflow: hidden;
  }

  /* Tech corner accents - Static Industrial */
  .skill-category::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 15px;
    height: 15px;
    border-top: 2px solid var(--color-primary);
    border-left: 2px solid var(--color-primary);
    opacity: 0.3;
    transition: opacity 0.2s ease;
  }

  .skill-category::after {
    content: "";
    position: absolute;
    bottom: 0;
    right: 0;
    width: 15px;
    height: 15px;
    border-bottom: 2px solid var(--color-primary);
    border-right: 2px solid var(--color-primary);
    opacity: 0.3;
    transition: opacity 0.2s ease;
  }

  /* Minimal Tech Hover: Border Only, No Shadow */
  .skill-category:hover {
    border-color: var(--color-primary);
    background: rgba(10, 10, 15, 0.9);
  }

  .skill-category:hover::before,
  .skill-category:hover::after {
    opacity: 1; /* Just light up, don't move */
  }

  .category-title {
    font-size: 1.25rem;
    margin: 0 0 2rem;
    color: var(--color-primary);
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    border-bottom: 1px solid rgba(45, 226, 230, 0.2);
    padding-bottom: 0.75rem;
  }

  .category-title::before {
    content: "";
    width: 8px;
    height: 8px;
    background: var(--color-secondary);
    border-radius: 0;
    transform: rotate(45deg);
  }

  .skill-list {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem; /* Increased gap */
    justify-content: center; /* Center items */
  }

  .skill-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    border-radius: 1px;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    transition: all 0.1s ease-out; /* Speed up transition */
    cursor: default;
    animation: fadeInUp 0.5s ease forwards;
    animation-delay: var(--delay);
    opacity: 0;
    width: 100px; /* Fixed minimal width base */
    flex: 1 1 100px; /* Grow and shrink properly */
    max-width: 140px; /* Prevent becoming too wide */
    position: relative;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Item Hover: High Contrast Frame, No Movement */
  @keyframes bumpJump {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-6px);
    }
    100% {
      transform: translateY(0);
    }
  }

  .skill-item:hover {
    border-color: var(--color-primary);
    background: rgba(50, 224, 196, 0.05);
  }

  .skill-item:hover .skill-icon img {
    /* "Petit rebond" - Jump up and down */
    animation: bumpJump 0.3s ease-in-out;
  }

  .skill-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.1s ease-out; /* Speed up */
  }

  .skill-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: all 0.1s ease-out; /* Speed up */
    filter: none; /* No grayscale, full color always */
  }

  .skill-name {
    color: var(--color-text-muted);
    font-weight: 500;
    font-size: 0.75rem;
    text-align: center;
    white-space: nowrap;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: color 0.1s ease-out; /* Speed up */
  }

  .skill-item:hover .skill-name {
    color: var(--color-primary);
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .skills-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

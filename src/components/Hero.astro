    </div>

    <div class="hero-visual">
      <div class="avatar-container">
        <div class="avatar-circles">
          <div class="circle c1"></div>
          <div class="circle c2"></div>
        </div>
        <div class="avatar-placeholder">
          <Image class="avatar-pic" src={mePic} alt="me" loading="eager" />
        </div>
        <div class="avatar-glow"></div>
      </div>
    </div>
  </div>
</section>

<script>
  const canvas = document.getElementById("network-canvas") as HTMLCanvasElement;
  if (canvas) {
    const ctx = canvas.getContext("2d");
    let width = window.innerWidth;
    let height = window.innerHeight;

    const isMobile = () => window.innerWidth < 768;
    const getParticleCount = () => (isMobile() ? 12 : 40);
    let particleCount = getParticleCount();
    const connectionDistance = isMobile() ? 120 : 150;
    const mouseParams = { x: 0, y: 0, radius: 200 };

    interface Impact {
      x: number;
      life: number;
      size: number;
    }
    let impacts: Impact[] = [];

    function setupCanvas() {
      const dpr = window.devicePixelRatio || 1;
      canvas.width = width * dpr;
      canvas.height = height * dpr;
      canvas.style.width = width + "px";
      canvas.style.height = height + "px";
      ctx?.scale(dpr, dpr);
    }
    setupCanvas();

    class Particle {
      x: number;
      y: number;
      vx: number;
      vy: number;
      size: number;

      constructor() {
        this.x = Math.random() * width;
        this.y = Math.random() * height;
        this.vx = (Math.random() - 0.5) * 1.5;
        this.vy = (Math.random() - 0.5) * 1.5;
        this.size = Math.random() * 2 + 1;
      }

      update() {
        this.x += this.vx;
        this.y += this.vy;

        if (this.x < 0 || this.x > width) this.vx *= -1;
        
        // Bottom collision with neon effect
        if (this.y > height) {
          this.y = height; // Clamp to bottom
          this.vy *= -1; // Bounce up
          impacts.push({ x: this.x, life: 1.0, size: this.size }); // Register impact
        }
        
        if (this.y < 0) this.vy *= -1;

        const dx = mouseParams.x - this.x;
        const dy = mouseParams.y - this.y;
        const distance = Math.sqrt(dx * dx + dy * dy);

        if (distance < mouseParams.radius) {
          const angle = Math.atan2(dy, dx);
          const force = (mouseParams.radius - distance) / mouseParams.radius;
          const pushX = Math.cos(angle) * force * 2;
          const pushY = Math.sin(angle) * force * 2;
          this.x -= pushX;
          this.y -= pushY;
        }
      }

      draw() {
        if (!ctx) return;
        ctx.beginPath();
        ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
        ctx.fillStyle = "#32e0c4";
        ctx.fill();

        ctx.shadowBlur = 10;
        ctx.shadowColor = "#32e0c4";
      }
    }

    let particles: Particle[] = [];

    function init() {
      particles = [];
      for (let i = 0; i < particleCount; i++) {
        particles.push(new Particle());
      }
    }

    function drawImpacts() {
      if (!ctx || isMobile()) return;
      
      // Update and draw impacts
      for (let i = impacts.length - 1; i >= 0; i--) {
        const impact = impacts[i];
        impact.life -= 0.03; // Fade out speed

        if (impact.life <= 0) {
          impacts.splice(i, 1);
          continue;
        }

        const opacity = impact.life;
        const scale = impact.size * 20; // Scale based on particle size
        
        // Draw glow line segment
        const gradient = ctx.createLinearGradient(
          impact.x - scale * 3, height, 
          impact.x + scale * 3, height
        );
        gradient.addColorStop(0, `rgba(50, 224, 196, 0)`);
        gradient.addColorStop(0.5, `rgba(50, 224, 196, ${opacity})`);
        gradient.addColorStop(1, `rgba(50, 224, 196, 0)`);

        ctx.fillStyle = gradient;
        ctx.fillRect(impact.x - scale * 3, height - 2, scale * 6, 2);

        // Draw burst glow
        const radial = ctx.createRadialGradient(
          impact.x, height, 0,
          impact.x, height, scale
        );
        radial.addColorStop(0, `rgba(50, 224, 196, ${opacity * 0.8})`);
        radial.addColorStop(1, "rgba(50, 224, 196, 0)");
        
        ctx.fillStyle = radial;
        ctx.fillRect(impact.x - scale, height - scale, scale * 2, scale);
      }
    }

    function animate() {
      if (!ctx) return;
      ctx.clearRect(0, 0, width, height);

      // Draw persistent bottom neon line only on desktop
      if (!isMobile()) {
        ctx.beginPath();
        ctx.moveTo(0, height - 1);
        ctx.lineTo(width, height - 1);
        ctx.strokeStyle = "rgba(50, 224, 196, 0.3)";
        ctx.lineWidth = 1;
        ctx.stroke();
      }

      particles.forEach((p, index) => {
        p.update();
        p.draw();

        for (let j = index + 1; j < particles.length; j++) {
          const p2 = particles[j];
          const dx = p.x - p2.x;
          const dy = p.y - p2.y;
          const dist = Math.sqrt(dx * dx + dy * dy);

          if (dist < connectionDistance) {
            ctx.beginPath();
            ctx.strokeStyle = `rgba(50, 224, 196, ${1 - dist / connectionDistance})`;
            ctx.lineWidth = 1;
            ctx.moveTo(p.x, p.y);
            ctx.lineTo(p2.x, p2.y);
            ctx.stroke();
          }
        }
      });

      drawImpacts(); // Draw the neon effects on top

      requestAnimationFrame(animate);
    }

    init();
    animate();

    window.addEventListener("resize", () => {
      width = window.innerWidth;
      height = window.innerHeight;
      ctx?.resetTransform();
      setupCanvas();
      particleCount = getParticleCount();
      init();
    });

    window.addEventListener("mousemove", (e) => {
      mouseParams.x = e.x;
      mouseParams.y = e.y;
    });
  }
</script>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 2rem 1.5rem;
    position: relative;
    overflow: hidden;
  }

  #network-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    pointer-events: none;
    opacity: 0.6;
  }

  .hero-content {
    max-width: var(--max-width);
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1.5fr 0.5fr;
    gap: 4rem;
    align-items: center;
    width: 100%;
    position: relative;
    z-index: 10;
  }

  .greeting {
    color: var(--color-primary);
    font-family: "Courier New", monospace;
    font-size: 1rem;
    margin: 0 0 1rem;
    letter-spacing: 2px;
    opacity: 0.8;
    text-transform: uppercase;
  }

  .name {
    font-size: clamp(2.5rem, 7.5vw, 4.5rem);
    margin: 0 0 0.5rem;
    font-weight: 800;
    color: var(--color-text);
    text-transform: uppercase;
    letter-spacing: -2px;
    position: relative;
    background: linear-gradient(180deg, #fff 0%, #b0b0b0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    filter: drop-shadow(0 4px 0 rgba(0, 0, 0, 0.5));
  }

  .title {
    font-size: clamp(1.5rem, 3vw, 2rem);
    color: var(--color-primary-light);
    margin: 0 0 0.5rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .subtitle {
    color: var(--color-text-muted);
    font-size: 1.25rem;
    margin: 0 0 2rem;
    border-left: 3px solid var(--color-secondary);
    padding-left: 1rem;
  }

  .bio {
    color: var(--color-text-muted);
    font-size: 1.1rem;
    line-height: 1.8;
    margin: 0 0 2rem;
    width: 85%;
  }

  .hero-info {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-bottom: 2.5rem;
  }

  .info-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--color-text);
    font-size: 1rem;
    background: rgba(255, 255, 255, 0.03);
    padding: 0.5rem 1rem;
    border-radius: 4px;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  .info-item svg {
    color: var(--color-primary);
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    text-decoration: none;
    overflow: hidden;
    transition: all 0.3s ease;
    clip-path: polygon(
      10px 0,
      100% 0,
      100% calc(100% - 10px),
      calc(100% - 10px) 100%,
      0 100%,
      0 10px
    );
  }

  .btn-primary {
    background: var(--color-primary);
    color: #000;
    border: none;
  }

  .btn-primary:hover {
    background: var(--color-primary-light);
    box-shadow: 0 0 30px var(--color-primary);
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: transparent;
    color: var(--color-primary);
    border: 1px solid var(--color-primary);
  }

  .btn-secondary:hover {
    background: rgba(50, 224, 196, 0.1);
    box-shadow: 0 0 20px rgba(50, 224, 196, 0.2);
    text-shadow: 0 0 8px var(--color-primary);
  }

  .btn-content {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    z-index: 2;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    border: 1px solid var(--color-border);
    background: rgba(255, 255, 255, 0.02);
    color: var(--color-text-muted);
    transition: all 0.3s ease;
    clip-path: polygon(
      8px 0,
      100% 0,
      100% calc(100% - 8px),
      calc(100% - 8px) 100%,
      0 100%,
      0 8px
    );
  }

  .social-links a:hover {
    background: var(--color-primary);
    color: #000;
    border-color: var(--color-primary);
    box-shadow: 0 0 20px var(--color-glow-primary);
  }

  .hero-visual {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    perspective: 1000px;
  }

  .avatar-container {
    position: relative;
    width: 350px;
    height: 350px;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: transform 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .avatar-container:hover {
    transform: scale(1.05);
  }

  .avatar-placeholder {
    width: 280px;
    height: 280px;
    border-radius: 50%;
    overflow: hidden;
    position: relative;
    z-index: 2;
    border: 3px solid var(--color-primary);
    box-shadow: 0 0 20px rgba(50, 224, 196, 0.3);
    transition: all 0.5s ease;
  }

  .avatar-container:hover .avatar-placeholder {
    border-color: #fff;
    box-shadow:
      0 0 50px var(--color-primary),
      0 0 100px var(--color-primary);
  }

  .avatar-pic {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .avatar-container:hover .avatar-pic {
    transform: scale(1.1);
    filter: contrast(1.1) brightness(1.1);
  }

  .avatar-circles {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    z-index: 0;
    pointer-events: none;
  }

  .circle {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border-radius: 50%;
    border: 1px solid var(--color-primary);
    transition: all 0.5s ease;
  }

  .c1 {
    width: 340px;
    height: 340px;
    border-style: dashed;
    opacity: 0.3;
    animation: spin 30s linear infinite;
  }

  .c2 {
    width: 380px;
    height: 380px;
    border: 2px solid var(--color-primary);
    opacity: 0.1;
    border-right-color: transparent;
    border-left-color: transparent;
    animation: spin-rev 20s linear infinite;
  }

  .avatar-container:hover .c1 {
    width: 360px;
    height: 360px;
    opacity: 0.6;
    border-color: #fff;
    animation-duration: 10s;
  }

  .avatar-container:hover .c2 {
    width: 400px;
    height: 400px;
    opacity: 0.4;
    border-color: var(--color-primary-light);
    animation-duration: 5s;
  }

  .avatar-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 300px;
    height: 300px;
    border-radius: 50%;
    background: radial-gradient(
      circle,
      var(--color-primary) 0%,
      transparent 70%
    );
    opacity: 0.2;
    z-index: 1;
    filter: blur(40px);
    transition: all 0.5s ease;
  }

  .avatar-container:hover .avatar-glow {
    opacity: 0.6;
    width: 400px;
    height: 400px;
  }

  @keyframes spin {
    from {
      transform: translate(-50%, -50%) rotate(0deg);
    }
    to {
      transform: translate(-50%, -50%) rotate(360deg);
    }
  }

  @keyframes spin-rev {
    from {
      transform: translate(-50%, -50%) rotate(360deg);
    }
    to {
      transform: translate(-50%, -50%) rotate(0deg);
    }
  }

  @media (max-width: 900px) {
    .hero {
      justify-content: center;
    }

    .hero-content {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 2rem;
      justify-items: center;
    }

    .hero-visual {
      order: -1;
      margin-bottom: 1rem;
      margin-top: 4rem;
    }

    .avatar-container {
      width: 260px;
      height: 260px;
    }

    .avatar-placeholder {
      width: 200px;
      height: 200px;
    }

    .c1 {
      width: 250px;
      height: 250px;
    }

    .c2 {
      width: 290px;
      height: 290px;
    }

    .avatar-container:hover .c1 {
      width: 260px;
      height: 260px;
    }

    .avatar-container:hover .c2 {
      width: 300px;
      height: 300px;
    }

    .avatar-glow {
      width: 220px;
      height: 220px;
    }

    .avatar-container:hover .avatar-glow {
      width: 280px;
      height: 280px;
    }

    .hero-text {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .subtitle {
      border-left: none;
      border-bottom: 3px solid var(--color-secondary);
      padding-left: 0;
      padding-bottom: 0.5rem;
      display: inline-block;
    }

    .bio {
      margin-left: auto;
      margin-right: auto;
      width: 100%;
      font-size: 1rem;
    }

    .hero-info {
      justify-content: center;
    }

    .hero-actions {
      justify-content: center;
    }
  }
</style>

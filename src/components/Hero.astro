---
import { Image } from "astro:assets";
import mePic from "../assets/me.png";

interface Props {
  name: string;
  title: string;
  subtitle: string;
  bio: string;
  email: string;
  location: string;
  github?: string;
  linkedin?: string;
  cvUrl: string;
}
const { name, title, subtitle, bio, email, location, github, linkedin, cvUrl } =
  Astro.props;
---

